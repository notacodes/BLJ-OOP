<Window x:Class="WürfelToGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WürfelToGo"
        mc:Ignorable="d"
        Title="Würfel" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        
            <TextBlock Grid.Row="0" x:Name="tbWurf" Text="0" HorizontalAlignment="Center" Margin="200,40,0,10" FontSize="40"/>
            <TextBlock Grid.Row="1" x:Name="tbLetzterWurf" Text="Letzter Wurf: 3" Margin="20" />
            <Button Content="Würfeln" Width="150" Height="30" Margin="10, 0, 80,0" Click="btnPressed"/>
        
    </Grid>
</Window>
